# 配置示例：使用 Alchemy RPC
# 复制此文件为 config.yaml 并填入你的 API Key

# Redis 缓存配置（可选）
redis:
  enable: true                    # 是否启用 Redis 缓存
  addr: "localhost:6379"          # Redis 地址
  password: ""                    # Redis 密码（如果设置了密码）
  db: 0                          # Redis 数据库编号（默认 0）

chains:
  # Base 链示例：使用 Alchemy 作为主端点，公共端点作为备用
  - name: base
    type: evm
    rpc: "https://base-mainnet.g.alchemy.com/v2/YOUR_BASE_API_KEY,https://mainnet.base.org"
    erc20:
      - symbol: USDC
        address: "0x833589fCD6EDb6E08f4c7C32D4f71b54bdA02913"

  # Ethereum 主网示例：多个端点（Alchemy + 备用）
  - name: ethereum
    type: evm
    rpc: "https://eth-mainnet.g.alchemy.com/v2/YOUR_ETH_API_KEY https://eth.llamarpc.com https://rpc.ankr.com/eth"
    erc20:
      - symbol: USDT
        address: "0xdAC17F958D2ee523a2206206994597C13D831ec7"
      - symbol: USDC
        address: "0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48"

